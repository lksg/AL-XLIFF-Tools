{
	"name": "xliff-tools",
	"publisher": "lksg",
	"icon": "icon.png",
	"displayName": "XLIFF Tools",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:snc.createnewnodes",
		"onCommand:snc.removelegacynodes",
		"onCommand:snc.translateall",
		"onCommand:snc.fixtranslationnodes",
		"onCommand:snc.inittranslationfile",
		"onCommand:snc.settranslationlanguage"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "snc.createnewnodes",
				"title": "SNC: Create new translation nodes"
			},
			{
				"command": "snc.removelegacynodes",
				"title": "SNC: Remove legacy translation nodes"
			},
			{
				"command": "snc.translateall",
				"title": "SNC: Translate all nodes"
			},
			{
				"command": "snc.fixtranslationnodes",
				"title": "SNC: Best effort fix for broken translations"
			},
			{
				"command": "snc.inittranslationfile",
				"title": "SNC: Initialize translationfile for your choosen language"
			},
			{
				"command": "snc.settranslationlanguage",
				"title": "SNC: Set translation language"
			}
		],
		"configuration": {
			"type": "object",
			"title": "XLIFF Tools",
			"properties": {
				"snc.translation.language": {
					"type": "string",
					"default": "",
					"description": "Specifies the language shorthand for your XLF files.",
					"scope": "window"
				},
				"snc.max.translations": {
					"type": "number",
					"default": "10",
					"description": "Specifies how many translations will be shown on the translations page at a time.",
					"scope": "window"
				},
				"snc.use.azure.translator": {
					"type": "boolean",
					"default": false,
					"description": "Enable / Disable the cognitive services translation",
					"scope": "window"
				},
				"snc.azure.translator.apikey": {
					"type": "string",
					"default": "",
					"description": "Api key for Azure Translator",
					"scope": "window"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.14.5",
		"@types/vkbeautify": "^0.99.2",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"@types/xmldom": "^0.1.29",
		"fast-xml-parser": "^3.12.16",
		"typed-rest-client": "^1.2.0",
		"vkbeautify": "^0.99.3",
		"xml-beautifier": "^0.4.0",
		"xml-formatter": "^1.1.0",
		"xmldom": "^0.1.27",
		"xpath": "0.0.27"
	}
}
